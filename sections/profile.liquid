<div class="profile-section" data-section-id="{{ section.id }}" data-section-type="profile">
	{% if section.settings.user-photo %}
		{%- assign img_url = section.settings.user-photo | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
		
		<img class="lazyload"
				data-src="{{ img_url }}"
				data-widths="[180, 360, 540]"
				data-sizes="auto" />
	{% endif %}

	{% if section.settings.user-name %}
		<h2> {{ section.settings.user-name | escape }} </h2>
	{% endif %}

	{% if section.settings.user-bio %}
		<p> {{ section.settings.user-bio | escape }} </p>
	{% endif %}
</div>

{% schema %}
  {
		"name": "Profile",
		"settings": [
			{
				"type": "text",
				"id": "user-name",
				"label": "User Name"
			},
			{
				"type": "image_picker",
				"id": "user-photo",
				"label": "User Photo"
			},
			{
				"type": "richtext",
				"id": "user-bio",
				"label": "User Bio"
			}
		],
		"presets": [
			{
				"category": "Profile",
				"name": "User Settings"
			}
		]
  }
{% endschema %}
